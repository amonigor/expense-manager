    "url": "https://amonigor.dev"
  },
  "scripts": {
    "dev": "npm run services:up && npm run services:wait:database && next dev",
    "build": "next build",
    "start": "next start",
    "test": "npm run services:up && concurrently -n next,vitest --hide next -k -s command-vitest \"next dev\" \"vitest run --no-file-parallelism\"",
    "posttest": "npm run services:stop",
    "test:watch": "vitest --no-file-parallelism",
    "services:up": "docker compose -p expense-manager -f infra/compose.yaml up -d",
    "services:stop": "docker compose -p expense-manager -f infra/compose.yaml stop",
    "services:down": "docker compose -p expense-manager -f infra/compose.yaml down",
    "services:wait:database": "node infra/scripts/wait-for-database.ts",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "eslint .",
    "lint:eslint:fix": "eslint . --fix",
    "prepare": "husky"
  },
  "dependencies": {
    "@primer/octicons-react": "19.21.1",
    "@tailwindcss/postcss": "4.1.18",
    "async-retry": "1.3.3",
    "next": "16.1.1",
    "next-themes": "0.4.6",
    "postcss": "8.5.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "tailwindcss": "4.1.18"
  },
  "devDependencies": {
    "@commitlint/cli": "20.2.0",
    "@commitlint/config-conventional": "20.2.0",
    "@secretlint/secretlint-rule-preset-recommend": "11.2.5",
    "@types/async-retry": "1.4.9",
    "@types/node": "25.0.3",
    "@types/react": "19.2.7",
    "concurrently": "9.2.1",
    "eslint": "9.39.2",
    "eslint-config-next": "16.1.1",
    "eslint-config-prettier": "10.1.8",
    "husky": "9.1.7",
    "prettier": "3.7.4",
    "prettier-plugin-organize-imports": "4.3.0",
    "prettier-plugin-tailwindcss": "0.7.2",
    "secretlint": "11.2.5",
    "vite-tsconfig-paths": "6.0.3",
    "vitest": "4.0.16"
  }
}
